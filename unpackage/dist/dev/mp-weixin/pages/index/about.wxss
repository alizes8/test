
.container {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: 0 auto;
}
.userheader {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #d2b48c;
  margin-top: 30px;
  padding-top: 30px;
  padding-bottom: 20px;
  height: 150px;
}
.logo-container {
  display: flex;
  align-items: center;
}
.logo {
  padding-bottom: 400px;
  max-width: 50px;
  max-height: 50px;
}
.membership {
  font-size: 14px;
  margin-left: 10px;
  margin-top: 100px;
}
.username {
  font-size: 14px;
  margin: 3px;
}
.content {
  flex: 1;
  display: flex;
}
.card {
  background-color: #d2b48c;
  flex: 1;
  padding: 20px;
  text-align: center;
}
.value {
  color: #000000;
  font-size: 14px;
  margin-bottom: 10px;
}
.label {
  font-size: 14px;
}
.footer {
  background-color: #d2b48c;
  padding: 20px;
  font-size: 14px;
  border-top: 1px solid #ffffff;
  display: flex;
}
.link {
  padding-left: 5%;
}
.arrow {
  margin-left: auto;
}
